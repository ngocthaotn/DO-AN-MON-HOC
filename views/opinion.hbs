<section>

    <div id="demo" class="carousel slide" data-ride="carousel" style="margin-top: 82px;">
      <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
      </ul>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/img/banner/bn1.jpg" style="width: 100%;" alt="Los Angeles">
        </div>
        <div class="carousel-item">
          <img src="/img/banner/bn4.jpg" style="width: 100%;" alt="Chicago">
        </div>
      </div>
      <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
      </a>
      <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
      </a>
    </div>

    <div class="container">
    <div class="opinion" style="margin-top: 50px;">
      {{#if message}}
        <h4 class="alert alert-warning message">{{ message }}</h4>
      {{/if}}
      <form action="/auth/opinion" method="POST">
        <div>
          <h4>Nhập ý kiến của bạn</h4>
          <div class="form-group">
            <label for="name">Tên người dùng:</label>
            <input type="text" class="form-control" placeholder="Nhập tên người dùng..." id="name-cmt" name="namecmt">
          </div>
          <div class="form-group">
            <label for="message">Viết bình luận:</label>
            <textarea type="text" class="form-control" id="message-cmt" name="comment"></textarea>
          </div>   
          <button class="btn-comment" type="submit">Bình luận<i class="fas fa-paper-plane"></i></button> 
        </div>

        <div>
          {{#each results}}
          <div class="card-body">
            <h5 class="card-title">{{this.username}}</h5>
            <h6 class="card-text" style="color:#757575; font-size:13px ;">{{this.date}}</h6>
            <h6 class="card-text" style="color:#424242;">{{this.comment}}</h6>
          </div>
        </div>
        {{/each}}
      </form>
    </div>
  </div>
</section>